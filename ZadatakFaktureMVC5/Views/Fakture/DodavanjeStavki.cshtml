@model ZadatakFaktureMVC5.ViewModels.FakturaStavkaViewDisplay

@{
    ViewBag.Title = "DodavanjeStavki";
}

<h2>DodavanjeStavki</h2>


@using (Html.BeginForm("DodavanjeStavki", "Fakture", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>FakturaStavkaViewDisplay</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.RacunID, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.RacunID, htmlAttributes: new { @class = "form-control", @readonly = "readonly" })



            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.StavkaID, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("StavkaID", new SelectList(ViewBag.ListaStavki, "Id", "Opis"), htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.StavkaID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.KolicinaArtikla, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.KolicinaArtikla, new { htmlAttributes = new { @class = "form-control", @type = "number", @min = "1", @step = "1", @value = "1", @max = "99" } })
                @Html.ValidationMessageFor(model => model.KolicinaArtikla, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
